generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Veggie {
  id            Int         @id @default(autoincrement())
  name          String
  name_es       String
  price         Float?
  unit          PriceUnit   @default(Unit)
  is_favorite   Boolean?    @default(false)
  picture_url   String?     
  created_at    DateTime    @default(now())
  updated_at    DateTime    @updatedAt
}

enum PriceUnit {
  Unit
  Libra
  Kilogram
  Gram
}
